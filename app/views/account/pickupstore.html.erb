  <div class="container-fluid text-center">
    <div class="row content">
      <div class="col-sm-2 sidenav" style="padding:40px">
        <p>Welcome <a href="">'first_name'</a></p>
        <p>Your balance: __</p>
        <p>Orders last 7 days: __</p>
        <p>Orders last 30 days: __</p>
        <p>Avergage storage time: __</p>
        <a href"#">Edit your account</a>
      </div>
      <div class="col-sm-8 text-center" style="padding:40px">
        <div class="row">
          <div class="col-sm-5 text-left well" style="margin-right:6px">
            <h3 style="padding-bottom:15px">Inbound:</h3>
            <table class="table table-striped table-condensed table-responsive table-bordered">
              <thead>
                <tr>
                  <th class="text-center">From</th>
                  <th class="text-center">Delivered by</th>
                </tr>
              </thead>
              <tbody>
                <% Order.all.each do |order| %>
                  <% if order.from == current_pickup.id && order.delivery_status == "processing" %>
                      <tr>
                        <td><%= order.seller_id %></td>
                        <td><%= order.updated_at %></td>
                      </tr>
                  <% elsif order.store_id == current_pickup.id && order.delivery_status == "in_transit" %>
                      <tr>
                        <td><%= order.seller_id %></td>
                        <td><%= order.updated_at %></td>
                      </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="col-sm-6 text-left well" style="margin-left:6px">
            <h3 style="padding-bottom:15px">Outbound:</h3>
            <table class="table table-striped table-condensed table-responsive table-bordered">
              <thead>
                <tr>
                  <th class="text-center">PIN</th>
                  <th class="text-center">Customer's details</th>
                  <th class="text-center">Seller</th>
                </tr>
              </thead>
              <tbody>
                <% Order.all.each do |order| %>
                  <% if order.from == current_pickup.id && order.delivery_status == "preparing_to_ship" %>
                    <tr>
                      <td><%= order.pincode %></td>
                      <td>Awaiting for courier</td>
                      <td><%= order.seller_id %></td>
                    </tr>
                  <% elsif order.store_id == current_pickup.id && order.delivery_status == "ready_for_collection" %>
                    <tr>
                      <td><%= order.pincode %></td>
                      <td><%= order.buyer_name %></td>
                      <td><%= order.seller_id %></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-sm-2 sidenav" style="padding-top:40px">
        <div class="well">
          <p>Expected today:</p>
        </div>
        <div class="well">
          <p>History:</p>
        </div>
      </div>
    </div>
  </div>
