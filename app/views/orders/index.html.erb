<p id="notice"><%= notice %></p>
<table class="table table-striped table-condensed table-responsive table-bordered">
  <thead>
    <tr>
      <th>From</th>
      <th>Pickup Store</th>
      <th>Delivery option</th>
      <th>Transport provider</th>
      <th>Parcel's content</th>
      <th>Show</th>
    </tr>
  </thead>

  <tbody>
    <% Order.all.each do |order| %>
      <tr>
        <td><%= order.from %></td>
        <td><%= order.store_id %></td>
        <td><%= order.delivery_option %></td>
        <td><%= order.transport_provider %></td>
        <td><%= order.parcel_content %></td>
        <td>
          <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            <span class='glyphicon glyphicon-search'></span>
          </button>
          <div class="modal fade" id="myModal" role="dialog" style="padding:30px">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Full shipment details</h4>
                  </div>
                  <div class="modal-body">
                    <p>
                     <strong>From:</strong>
                     <%= order.from %>
                    </p>

                    <p>
                     <strong>Delivery option:</strong>
                     <%= order.delivery_option %>
                    </p>

                    <p>
                     <strong>Transport provider:</strong>
                     <%= order.transport_provider %>
                    </p>

                    <p>
                     <strong>Delivery status:</strong>
                     <%= order.delivery_status %>
                    </p>

                    <p>
                     <strong>Parcel size l:</strong>
                     <%= order.parcel_size_L %>
                    </p>

                    <p>
                     <strong>Parcel size w:</strong>
                     <%= order.parcel_size_W %>
                    </p>

                    <p>
                     <strong>Parcel size h:</strong>
                     <%= order.parcel_size_H %>
                    </p>

                    <p>
                     <strong>Parcel weight:</strong>
                     <%= order.parcel_weight %>
                    </p>

                    <p>
                     <strong>Parcel content:</strong>
                     <%= order.parcel_content %>
                    </p>

                    <p>
                     <strong>Seller:</strong>
                     <%= order.seller %>
                    </p>

                    <p>
                     <strong>Store:</strong>
                     <%= order.store %>
                    </p>

                    <p>
                    <strong>Warehouse:</strong>
                     <%= order.warehouse %>
                    </p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>

              </div>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
