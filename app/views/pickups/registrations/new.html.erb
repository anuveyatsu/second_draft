<div class="container text-center panel" style="padding-top:40px; margin-top:20px">
  <div class="container-fluid" style="max-width:240px">
    <div class="list-group text-center">
      <h3 class="text-primary list-group-item">Register as a pick-up point</h3>
      <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%= devise_error_messages! %>

        <%= f.input :company, label: false, placeholder: "Store name", input_html: { class: "list-group-item", style: "margin-top:15px" } %>
        <%= f.input :pickup_business_type, label: false, placeholder: "Business type", input_html: { class: "list-group-item" } %>
        <%= f.input :pickup_phone, label: false, placeholder: "Phone", input_html: { class: "list-group-item" } %>
        <%= f.input :pickup_working_hours, label: false, placeholder: "Working hours", input_html: { class: "list-group-item" } %>
        <%= f.input :pickup_address, label: false, placeholder: "Address", input_html: { class: "list-group-item" } %>
        <%= f.input :pickup_city, label: false, placeholder: "City", input_html: { class: "list-group-item" } %>
        <%= f.input :pickup_country, :as => :string, label: false, placeholder: "Country", input_html: { class: "list-group-item" } %>

        <%= f.input :email, autofocus: true, label: false, placeholder: "Email", input_html: { class: "list-group-item" } %><p>

        <%= f.input :password, autocomplete: "off", label: false, placeholder: "Password", input_html: { class: "list-group-item" }, wrapper_html: { style: "margin-bottom:0" } %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.input :password_confirmation, autocomplete: "off", label: false, placeholder: "Confirm password", input_html: { class: "list-group-item" } %>

        <%= f.button :submit, "Sign up", :class => "list-group-item btn-block active" %>
      <% end %>

      <%= render "pickups/shared/links" %>
    </div>
  </div>
</div>
