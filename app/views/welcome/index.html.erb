  <script>
    function validateEmail() {
      var x = document.getElementById("inputEmail").value;
      var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
      if (re.test(x)) {
        return true;
      } else {
        alert("Please provide valida email address.");
        return false;
      }
    }

    function colorless(x) {
      x.style.filter = "grayscale(100%)";
      x.style.WebkitFilter = "grayscale(100%)";
    }
    function colorfull(x) {
      x.style.filter = "none";
      x.style.WebkitFilter = "none";
    }
  </script>
